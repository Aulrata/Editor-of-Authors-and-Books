<Window x:Class="Editor_of_Authors_and_Books.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Editor_of_Authors_and_Books"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" Text="Название книги" VerticalAlignment="Top"/>
        <TextBox x:Name="Name" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,135,0,0" TextWrapping="Wrap" Text="Год выпуска" VerticalAlignment="Top"/>
        <TextBox x:Name="YearOfIssue" HorizontalAlignment="Center" Margin="0,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Button Content="Добавить книгу" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="32" Width="84" Click="AddBookButton"/>

    </Grid>
</Window>
